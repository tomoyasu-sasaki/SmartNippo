{
  "name": "SmartNippo",
  "description": "Expo Ã— Convex Daily-Report App - A modern monorepo for daily report management",
  "version": "1.0.0",
  "author": "SmartNippo Team",
  "dependencies": {
    "@types/jest": "*"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@edge-runtime/vm": "^5.0.0",
    "@eslint/js": "^9.29.0",
    "@types/node": "^24.0.3",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "convex": "*",
    "convex-test": "^0.0.37",
    "eslint": "*",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "*",
    "prettier-plugin-organize-imports": "^4.1.0",
    "syncpack": "^13.0.4",
    "turbo": "^2.5.4",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "convex",
    "daily-report",
    "expo",
    "monorepo",
    "nextjs",
    "react-native"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.12.1",
  "private": true,
  "scripts": {
    "build": "pnpm --filter=!@smartnippo/docs build",
    "changeset": "changeset",
    "clean": "turbo run clean && rm -rf node_modules",
    "convex:schema": "npx convex dashboard",
    "deploy:convex": "npx convex deploy",
    "dev": "pnpm --filter=!@smartnippo/docs dev",
    "dev:convex": "npx convex dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "pnpm --filter=!@smartnippo/docs lint",
    "lint:packages": "pnpm syncpack list-mismatches",
    "prepare": "husky install",
    "release": "turbo run build lint test && changeset publish",
    "test": "turbo run test",
    "test:convex": "vitest --config convex/vitest.config.mts convex/**/*.test.ts",
    "test:convex:coverage": "vitest run --coverage --coverage.reporter=text --config convex/vitest.config.mts convex/**/*.test.ts",
    "test:convex:debug": "vitest --inspect-brk --no-file-parallelism --config convex/vitest.config.mts convex/**/*.test.ts",
    "test:convex:run": "vitest run --config convex/vitest.config.mts convex/**/*.test.ts",
    "type-check": "pnpm --filter=!@smartnippo/docs type-check",
    "version-packages": "changeset version"
  },
  "type": "module"
}
