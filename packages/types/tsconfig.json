{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": "../..",
    "paths": {
      "@/convex/*": ["convex/*"],
      "@smartnippo/lib": ["packages/lib/src"],
      "@smartnippo/lib/*": ["packages/lib/src/*"],
      "@smartnippo/types": ["packages/types/src"],
      "@smartnippo/types/*": ["packages/types/src/*"]
    },
    "outDir": "./dist",
    "emitDeclarationOnly": true,
    "rootDir": "../.."
  },
  "include": ["src/**/*", "../lib/src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
