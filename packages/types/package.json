{
  "name": "@smartnippo/types",
  "description": "Shared type definitions for SmartNippo",
  "version": "0.1.0",
  "dependencies": {
    "convex": "*"
  },
  "devDependencies": {
    "tsup": "*",
    "typescript": "*"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "types": "dist/index.d.ts"
}
