{
  "name": "@smartnippo/config",
  "description": "Shared configuration files for SmartNippo",
  "version": "0.1.0",
  "devDependencies": {
    "eslint": "*",
    "prettier": "*",
    "tsup": "*",
    "typescript": "*"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "type": "module",
  "types": "dist/index.d.ts"
}
