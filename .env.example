# Environment Configuration
NODE_ENV=development

# Convex Configuration
# Generated by `npx convex dev` - DO NOT modify manually
CONVEX_DEPLOYMENT=dev:your-deployment-name
CONVEX_URL=your_convex_url

# For client-side usage in Next.js and Expo
NEXT_PUBLIC_CONVEX_URL=your_convex_url
EXPO_PUBLIC_CONVEX_URL=your_convex_url

# Clerk Authentication
# Use same values across Web and Mobile for consistency
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# Clerk Domain Configuration for Convex
# Development: https://your-app-name.clerk.accounts.dev
# Production: https://clerk.your-domain.com
NEXT_PUBLIC_CLERK_FRONTEND_API_URL=https://neutral-marmoset-26.clerk.accounts.dev
CLERK_APPLICATION_ID=convex

# Expo Configuration
# EAS Build
EAS_PROJECT_ID=

# Development URLs
NEXT_PUBLIC_WEB_URL=http://localhost:3000

# Database URLs (if using external databases)
DATABASE_URL=

# Third-party Service Keys
# Add any required API keys here

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=false

# Logging
LOG_LEVEL=info

# Convex Auth
CONVEX_DEPLOY_KEY=your_convex_deploy_key
