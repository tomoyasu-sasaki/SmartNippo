{
  "extends": "./packages/config/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@smartnippo/lib": ["packages/lib/src"],
      "@smartnippo/lib/*": ["packages/lib/src/*"],
      "@smartnippo/types": ["packages/types/src"],
      "@smartnippo/types/*": ["packages/types/src/*"],
      "@/convex/*": ["convex/*"]
    }
  },
  "include": ["packages/**/*", "apps/**/*"],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/.turbo",
    "**/coverage"
  ],
  "references": [
    {
      "path": "./packages/lib"
    },
    {
      "path": "./packages/types"
    },
    {
      "path": "./packages/config"
    }
  ]
}
